<p id="notice"><%= notice %></p>

<h1>Admin Entries</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Category</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_entries.each do |admin_entry| %>
      <tr>
        <td><%= admin_entry.title %></td>
        <td><%= admin_entry.body %></td>
        <td><%= admin_entry.category_id %></td>
        <td><%= admin_entry.user_id %></td>
        <td><%= link_to 'Show', admin_entry %></td>
        <td><%= link_to 'Edit', edit_admin_entry_path(admin_entry) %></td>
        <td><%= link_to 'Destroy', admin_entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

