<h1>entry: <%= @entry.title %></h1>
<div class="content">
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Title:</strong>
    <%= @entry.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= @entry.content %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= @entry.category_id %>
  </p>

  <p>
    <strong>User:</strong>
    <%= @entry.user_id %>
  </p>

  <%= link_to 'Edit', edit_admin_entry_path(@entry) %> |
  <%= link_to 'Back', admin_entries_path %>
</div>