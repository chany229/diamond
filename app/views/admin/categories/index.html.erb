<h1>Admin Categories</h1>
<div class="content">
  <p id="notice"><%= notice %></p>

  <table>
    <thead>
    <tr>
      <th>Title</th>
      <th>Father</th>
      <th>Position</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.title %></td>
        <td><%= category.father_id %></td>
        <td><%= category.position %></td>
        <td><%= link_to 'Show', [:admin, category] %></td>
        <td><%= link_to 'Edit', edit_admin_category_path(category) %></td>
        <td><%= link_to 'Destroy', [:admin, category], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Admin Category', new_admin_category_path %>

</div>
